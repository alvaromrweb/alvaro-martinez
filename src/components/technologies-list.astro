---
import { Icon } from "astro-icon";
import type { TechnologyItem } from "~/types";

export interface Props {
  items: Array<TechnologyItem>;
  title: string;
}

const { items, title} = Astro.props;
---

<div class="w-full max-w-6xl space-y-2">
  <h3 class="text-3xl font-bold text-center">{title}</h3>
  <div class="relative border border-default bg-offset px-6 pt-8 pb-4">
    <ul class="grid grid-cols-2 gap-8 sm:grid-cols-3 md:grid-cols-6">
      {
        items.map((item) => (
          <li>
            <div class="flex flex-col items-center gap-2">
              <Icon class="h-12" name={item.icon} />
              <span>{item.title}</span>
            </div>
          </li>
        ))
      }
    </ul>
  </div>
</div>

